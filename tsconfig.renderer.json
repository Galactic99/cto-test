{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "outDir": "./dist/renderer",
    "isolatedModules": true
  },
  "include": ["src/renderer/**/*", "src/types/**/*", "src/preload/**/*"]
}
